{
  "compilerOptions": {
     "lib": [
        "es5",
        "es6"
     ],
     "strict": true,
     "module": "commonjs",
     "target": "es6",
     "outDir": "./build",
     "skipLibCheck": true,
     "esModuleInterop": true,
     "experimentalDecorators": true,
     "strictPropertyInitialization": false,
     "emitDecoratorMetadata": true,
     "moduleResolution": "node",
     "baseUrl": "src",
     "forceConsistentCasingInFileNames": true,
     "sourceMap": true,

  },
  "ts-node": {
     "files": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}